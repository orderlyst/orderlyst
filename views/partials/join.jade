ion-view
  include ./header
  ion-view
    ion-view
      ion-content.has-header.text-center
        .spacer
          h3.vertical-aligned Your Group's Order
        h4 Get started by filling up the form
        form(ng-submit="submit()")
          .list
            label.item.item-divider.item-input.item-floating-label
              span.input-label Group Code
              input(type='text', placeholder='Your order code, e.g.: wwcjy', ng-model="joinOrder.code")
            label.item.item-divider.item-input.item-floating-label(ng-if="!hasAccount")
              span.input-label Your Name
              input(type='text', placeholder='Your Name', ng-model="joinOrder.name")
          .row
            .col-80.col-offset-10
              input.button.button-balanced.button-block(type="submit", value="Join Order")
