ion-view
  include ./header
  ion-view
    ion-view
      ion-content.has-header.text-center
        img(src='http://1.bp.blogspot.com/-P2GRkzMsIwc/UrjBzoeEYPI/AAAAAAAAHH4/RBdeQl3sesw/s1600/DSC03794-SNOW.gif',\
        style='width: 100%; height: 170px;')
        h4 Get started by filling up the form
        form(ng-submit="submit()")
          label.item.item-input
            span.input-label
            input(type='text', placeholder='Group Code', ng-model="joinOrder.code")
          label.item.item-input
            span.input-label
            input(type='text', placeholder='Your Name', ng-model="joinOrder.name", ng-if="!hasAccount")
          .row
            .col-80.col-offset-10
              input.button.button-balanced.button-block(type="submit", value="Join Order")
