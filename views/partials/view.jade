ion-header-bar
    a.title(href="/") Orderlyst
ion-view
    ion-tabs.tabs-striped.tabs-top.tabs-color-assertive(has-header="true")
        ion-tab(title="Total Order")
            ion-view
                ion-content
                    .row(ng-repeat="item in items track by item._id")
                        .col.col-10
                            | 1
                        .col.col-60
                            | {{item.name}}
                        .col.col-20
                            | {{item.price | currency}} 
                        .col.col-10
                            .a.icon.ion-close(ng-click="removeOrderItem(item)")
                    .form-wrapper
                        form.new-orderp-item-form(accept-charset="UTF-8", ng-submit="createOrderItem()")
                        .list
                            label.item.item-input
                                input(type="text",placeholder="Item",ng-model="formData.name")
                            label.item.item-input
                                input(type="text",placeholder="Price",ng-model="formData.price")
                            button.button.button-block.button-stable(ng-click="createOrderItem()")
                                | Add New Item
        ion-tab(title="User Order")
            ion-view
                ion-content
