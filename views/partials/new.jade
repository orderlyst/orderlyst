ion-modal-view
    ion-header-bar.bar-stable
        h2.title Add Item
    ion-content.has-header
        form.new-order-item-form(accept-charset="UTF-8", name="newItemForm", ng-submit="createOrderItem()")
        .list
            label.item.item-input
                input(type="text",placeholder="Item",ng-model="itemFormData.name", ng-required="true", name="name")
            label.item.item-input
                input(type="tel",placeholder="Price",ng-model="itemFormData.price", ng-required="true", \
                    ng-pattern="/^[1-9][0-9]*(\.[0-9][05])?$/", name="price")
            .item.row
                .col-20.text-center.col-offset-20 Quantity&nbsp
                .col-20.text-right.ion-minus(ng-click="decrementFormDataQuantity()")
                .col-20
                    input.item.text-center.full-width(type="tel", value="{{itemFormData.quantity}}", \
                        ng-required="true", ng-pattern="/^[1-9][0-9]*$/", name="quantity", ng-model="itemFormData.quantity")
                .col-20.text-left.ion-plus(ng-click="incrementFormDataQuantity()")
            button.button.button-block.button-filled(ng-click="createOrderItem()") Add To Order
            button.button.button-full.button-blank(ng-click="closeModal()") Cancel
