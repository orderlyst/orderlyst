ion-modal-view
    ion-header-bar.bar-orderlyst.bar-filled
        h2.title Add Item
    ion-content.has-header
        form.new-order-item-form.modal-body.list(accept-charset="UTF-8", name="newItemForm", novalidate="")
            label.item.item-input.item-floating-label(ng-class="{ 'has-error': newItemForm.name.$invalid && itemFormData.submitted, \
                    'valid': newItemForm.name.$valid && itemFormData.submitted && newItemForm.name.$dirty }")
                span.input-label Item Name
                input(type="text",placeholder="Item Name",ng-model="itemFormData.name", ng-required="true", name="name")
            .form-errors(ng-show="newItemForm.name.$error && itemFormData.submitted", ng-messages="newItemForm.name.$error")
                .form-error(ng-message="required") Item name is required

            label.item.item-input.item-floating-label(ng-class="{ 'has-error': newItemForm.price.$invalid && itemFormData.submitted, \
                    'valid': newItemForm.price.$valid && itemFormData.submitted && newItemForm.price.$dirty }")
                span.input-label Item Price (S$)
                input(type="number",placeholder="Item Price (S$)",ng-model="itemFormData.price", ng-required="true", \
                    ng-pattern="/^[1-9][0-9]*(\.[0-9]([05])?)?$/", name="price")
            .form-errors(ng-show="newItemForm.price.$error && itemFormData.submitted", ng-messages="newItemForm.price.$error")
                .form-error(ng-message="required") Item price is required
                .form-error(ng-message="pattern") Price must be valid

            .item.item-input.item-floating-label(ng-class="{ 'has-error': newItemForm.quantity.$invalid && itemFormData.submitted, \
                    'valid': newItemForm.quantity.$valid && itemFormData.submitted && newItemForm.quantity.$dirty }")
                .row
                  .col-20.text-center.col-offset-20 Quantity
                  .col-20.text-right(ng-click="decrementFormDataQuantity()")
                    i.ion-minus.icon
                  .col-20.text-center
                      .special-height {{itemFormData.quantity}}
                  .col-20.text-left(ng-click="incrementFormDataQuantity()")
                    i.icon.ion-plus

    ion-footer-bar.bar-orderlyst()
        button.button.button-clear.button-blank(ng-click="closeAddItemModal()") Cancel
        button.button.button-clear.button-filled(ng-click="createOrderItem()") Add To Order
